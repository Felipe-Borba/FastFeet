generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  cpf      String   @unique
  password String
  role     String
  parcels  Parcel[]
}

model Parcel {
  id             String  @id @default(uuid())
  cep            Int
  status         String
  codigorastreio String
  tipoEntrega    String
  responsible    User?   @relation(fields: [responsibleId], references: [id])
  responsibleId  String?
}

model Recipient {
  id   String @id @default(uuid())
  name String
}
